<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.savedRecipes.ViewRecipe">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/viewRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Title" />
        <TextView
            android:id="@+id/viewRecipeIngredientsLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Ingredients" />
        <TextView
            android:id="@+id/viewRecipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ingredients" />
        <TextView
            android:id="@+id/viewRecipeInstructionsLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Instructions" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/viewRecipeInstructions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Instructions" />
        </ScrollView>
        <TextView
            android:id="@+id/viewRecipeFavorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Is Favorited?" />
    </LinearLayout>
</ScrollView>