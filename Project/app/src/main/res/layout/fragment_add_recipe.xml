<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/title_recipe"
            android:layout_width="match_parent"
            android:importantForAutofill="no"
            android:layout_height="48dp"
            android:inputType="text"
            android:hint="Chocolate Chip Cookies" />

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Favorite Icon"
            android:src="@drawable/favorite_icon_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <ListView
            android:id="@+id/recipe_ingredients_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/recipe_ingredients_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Enter Ingredient"/>
        <Button
            android:id="@+id/add_ingredient_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Ingredient"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <EditText
            android:id="@+id/recipe_instructions"
            android:hint="1. Preheat oven to 365 degrees F. Line two baking sheets with parchment paper and set aside."
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <Button
                android:id="@+id/button_confirm"
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/add"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>