<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:fontFamily="@font/raleway"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/title_recipe_update"
            android:layout_width="match_parent"
            android:importantForAutofill="no"
            android:layout_height="48dp"
            android:fontFamily="@font/cabin"
            android:inputType="textCapWords|textAutoCorrect"
            android:hint="@string/title_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_ingredients"
            android:fontFamily="@font/raleway"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <ListView
            android:id="@+id/recipe_ingredients_listview_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/recipe_ingredients_edittext_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textCapWords|textAutoCorrect"
            android:hint="@string/enter_ingredient"/>
        <Button
            android:id="@+id/add_ingredient_recipe_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_ingredient"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <EditText
            android:id="@+id/recipe_instructions_update"
            android:hint="@string/instruction_hint"
            android:layout_width="match_parent"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <Button
                android:id="@+id/button_confirm_update"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="@string/update"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>